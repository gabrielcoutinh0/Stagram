{
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "outDir": "lib",
    "removeComments": true,
    "target": "ES6",

    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {},

    "sourceMap": true,
    "sourceRoot": "/",

    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "noImplicitReturns": false,
    "noUncheckedIndexedAccess": true,
    "typeRoots": ["@types", "./node_modules/@types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
